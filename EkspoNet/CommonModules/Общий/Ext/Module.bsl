Процедура ЗаполнитьСлужебныеСправочники() Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Служебный_Время.Ссылка КАК Ссылка
	|ИЗ
	|	Справочник.Служебный_Время КАК Служебный_Время";
	
	Если Запрос.Выполнить().Пустой() Тогда
		
		Сч = 0;
		
		Пока Сч <= 23 Цикл
			
			НовыйЭлемент = Справочники.Служебный_Время.СоздатьЭлемент();
			НовыйЭлемент.Наименование = Сч;
			НовыйЭлемент.Час          = Сч;
			НовыйЭлемент.Записать();
			
			Сч = Сч + 1;
			
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры